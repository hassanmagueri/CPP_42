CPP		= c++ -Wall -Wextra -Werror -std=c++98
SRC		= main.cpp Span.cpp
OBJ		= $(SRC:.cpp=.o) 
HDR		= Span.hpp
NAME	= main

all: $(NAME)

$(NAME): $(OBJ)
	$(CPP) $(OBJ) -o $(NAME)

%.o: %.cpp $(HDR)
	$(CPP) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all